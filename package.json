{
  "name": "homesphere",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "concurrently --kill-others-on-fail --names \"BACKEND,FRONTEND\" --prefix \"[{name}]\" --prefix-colors \"cyan.bold,green.bold\" \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "node src/backend/index.js",
    "start:frontend": "cd src/interface_page && npm start",
    "dev": "concurrently --kill-others-on-fail --names \"BACKEND,FRONTEND\" --prefix \"[{name}]\" --prefix-colors \"cyan.bold,green.bold\" \"nodemon src/backend/index.js\" \"cd src/interface_page && npm run serve\"",
    "install:all": "npm install && cd src/interface_page && npm install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MasterLini/HomeSphere.git"
  },
  "private": true,
  "dependencies": {
    "express": "^4.21.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "mongodb": "^5.1.0",
    "bcrypt": "^5.1.0",
    "jsonwebtoken": "^9.0.0",
    "dotenv": "^16.0.3",
    "swagger-ui-express": "^4.6.0",
    "swagger-jsdoc": "^6.2.8"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^8.12.0",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": ["dotenv/config"],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
